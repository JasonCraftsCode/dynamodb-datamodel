{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017", "es7"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "coverage", "dist", "**/*.spec.ts", "**/*.test.ts", "**/__tests__/*"]
}
