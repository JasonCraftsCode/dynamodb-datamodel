{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6", "es2015"],
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    // "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "coverage", "dist", "**/*.spec.ts", "**/*.test.ts", "**/__tests__/*"]
}
